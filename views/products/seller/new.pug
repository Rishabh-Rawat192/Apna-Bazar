extends ../../base

block links
    link(rel="stylesheet", href="/css/addProduct.css")

block content
    main
        form.container
            input#name(type='text' placeholder='enter name' name='name' required)
            input#price(type='number' placeholder='enter price' name='price' required)
            input#image(type='file' accept='image/*' name='image' required)
            
            input(type="submit", value="Submit")

    script(src="/js/addProduct.js")