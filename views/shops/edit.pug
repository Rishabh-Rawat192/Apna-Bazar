extends ../base

block links
    link(rel='stylesheet', href='/css/editShop.css')

block content
    main
        form.container(data-id=`${shop._id}`)
            div.form1  
                input#name.form1__input(type ='text' placeholder ='name' name='name' value=`${shop.name}` required)
                label.form1__label(for="name") Name : 
            div.form1  
                input#address.form1__input(type ='text' placeholder ='address' name='address'  value=`${shop.location.address}` required)
                label.form1__label(for="address") Address : 
            div.form1  
                input#longitude.form1__input(type ='text' placeholder ='longitude' name='lng' value=`${shop.location.coordinates[0]}` required)
                label.form1__label(for="longitude") Longitude : 
            div.form1  
                input#latitude.form1__input(type ='text' placeholder ='latitude' name='lat' value=`${shop.location.coordinates[1]}` required)
                label.form1__label(for="latitude") Latitude : 
            div.form1  
                input#image.form1__input(type ='text' placeholder='image' name='image' value=`${shop.image}` required)
                label.form1__label(for="image") Shop Image : 
            input(type='submit', value='Submit')                    
    script(src='/js/editShop.js')
