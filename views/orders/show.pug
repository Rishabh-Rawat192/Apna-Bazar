extends ../base

block links
    link(rel="stylesheet", href="/css/orderDetails.css")

block content
    main
        .extra-details
            .status=`status: ${order.status}`
            div=`Quantity: ${order.quantity}`
            div=`Total: ₹${order.totalPrice}`
            div=`Address: ${order.address.address}`
            div=`Phone: ${order.address.phone}`
        .item(data-id=`${order._id}` data-user-role=`${user.role}`)
            img(src=`${order.product.image}`, alt=`${order.product.name}`)
            .detail
                .sub-detail-1
                    div=order.product.name
                    div.price= `₹${order.product.price}`
                .sub-detail-2
                    button#cancel-button Cancel
                    if user.role==='user'
                        button#remove-button Remove
                    else
                        button#confirm-button Confirm
                        button#deliver-button Delivered

    script(src="/js/orderDetails.js")