extends ../base

block links
    link(rel='stylesheet' href='/css/order.css')

block content
    div#title-wrapper
        h2.title=`${user.role==='seller'?'Received Orders':'Your Orders'}`
    main
        .container
            -orders.forEach(order=>{
                .item
                    .status
                        h4=order.status
                    img(src=`${order.product.image}`, alt=`${order.product.name}`)
                    .detail
                        div=order.product.name
                        a(href=`/orders/${order._id}`) More
                    div.price= `â‚¹ ${order.product.price}`
            -});
    script(src='/js/orders.js')
            

